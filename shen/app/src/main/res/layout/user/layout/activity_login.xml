<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/snow"
    tools:context="com.nwei.shen.activities.user.LoginActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/login_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/lightblue"
        >
        <TextView
            android:id="@+id/login_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="参宝财富登录"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_gravity="center_horizontal"
            />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="25dp"
        >
        <LinearLayout
            android:id="@+id/text_phone_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="账号"
                />
            <EditText
                android:id="@+id/login_request_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLength="11"
                android:inputType="number"
                android:text="15209272743"
                android:textCursorDrawable="@drawable/color_cursor"
                android:theme="@style/MyEditText"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/text_password_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/text_phone_block"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="密码"
                />
            <EditText
                android:id="@+id/login_request_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="123456"
                android:textCursorDrawable="@drawable/color_cursor"
                android:theme="@style/MyEditText"
                android:inputType="textPassword"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/login_button_block"
            android:layout_below="@+id/text_password_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            >
            <com.nwei.component.CustomButton
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:text="登&#160;&#160;录"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/quick_register_block"
            android:layout_below="@+id/login_button_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="快速注册"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="忘记密码"
                />
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>