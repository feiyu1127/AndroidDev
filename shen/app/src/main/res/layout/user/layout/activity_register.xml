<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nwei.shen.activities.user.RegisterActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/register_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/lightblue"
        >
          <ImageView
              android:id="@+id/register_backup_icon"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_backup"
              />

          <TextView
              android:id="@+id/text_register_toolbar"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="参宝财富注册"
              android:textStyle="bold"
              android:textSize="18sp"
              android:textColor="#000"
              android:layout_gravity="center_horizontal"
              />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="80dp"
        android:padding="10dp"
        >
        <LinearLayout
        android:id="@+id/text_register_phone_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
            <com.nwei.component.CustomEditText
                android:id="@+id/register_request_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:maxLength="11"
                android:paddingLeft="10dp"
                android:inputType="number"
                android:hint="手机号"
                android:textCursorDrawable="@drawable/color_cursor"
                />
            <com.nwei.component.CustomEditText
                android:id="@+id/register_request_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:hint="密码"
                android:textCursorDrawable="@drawable/color_cursor"
                />
            <com.nwei.component.CustomEditText
                android:id="@+id/password_confirmation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_marginBottom="10dp"
                android:hint="再次输入密码"
                android:textCursorDrawable="@drawable/color_cursor"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.nwei.component.CustomEditText
                    android:id="@+id/register_verify_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="短信验证码"
                    android:layout_weight="2"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textCursorDrawable="@drawable/color_cursor"
                    />
                <com.nwei.component.CustomButtonNoCorner
                    android:id="@+id/register_send_verify_code_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="点击获取"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/register_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_shape"
                android:textColor="#fff"
                android:text="注&#160;&#160;册"
                />
        </LinearLayout>


    </RelativeLayout>

</FrameLayout>
