<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nwei.shen.activities.user.RegisterActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/register_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
          <TextView
              android:id="@+id/text_register_toolbar"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="用户注册"
              android:textStyle="bold"
              android:textSize="18sp"
              android:textColor="#000"
              android:layout_gravity="center_horizontal"
              />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:padding="10dp"
        >
        <LinearLayout
            android:id="@+id/text_register_name_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="姓名"
                />
            <EditText
                android:id="@+id/request_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="赵云"
                />
        </LinearLayout>
        <LinearLayout
        android:id="@+id/text_register_phone_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_register_name_block"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="手机号"
            />
        <EditText
            android:id="@+id/request_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="15200000001"
            />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/text_register_password_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_register_phone_block"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="密码"
                />
            <EditText
                android:id="@+id/request_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="15200000001"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/sex_spinner_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_register_password_block"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="性别"
                />
            <Spinner
                android:id="@+id/spinner_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/sex"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/verify_code_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sex_spinner_block"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/verify_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="521252"
                />
            <Button
                android:id="@+id/send_verify_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发送验证码"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/verify_code_block"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="注册"
                />
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
