<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#dadce0"
    android:orientation="vertical" >

    <!-- 顶层步骤标题 -->

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/profession_info_easy_ll_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/comm_title_bg" >

                <TextView
                    style="@style/title_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/step4" />
            </FrameLayout>
            <!-- 顶层步骤图片 -->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/profession_info_easy_ll_title2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/comm_title_bg" >

                <TextView
                    style="@style/title_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/step4" />
            </FrameLayout>
            <!-- 顶层步骤图片 -->

        </LinearLayout>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/profession_info_easy_rl_body"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="#f7f8f9" />


        <TextView
            android:id="@+id/head"
            style="@style/head_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="职业资料" />

        <!-- 滑动输入框 -->

        <ScrollView
            android:id="@+id/ScrollView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:overScrollMode="never" >

            <!-- 输入表单布局 -->

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp" >

                <!-- 现单位全称 -->

                <LinearLayout
                    android:id="@+id/now_dp_name_text_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/comm_must_fill_term"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/now_dp_name_text"
                        style="@style/input_style_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="@string/input_now_dp_name" />

                    <EditText
                        android:id="@+id/now_dp_name_value"
                        style="@style/editText_style"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@android:color/transparent" />
                </LinearLayout>
                <!-- 任职部门 -->

                <LinearLayout
                    android:id="@+id/rz_dp_text_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/now_dp_name_text_ll"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/comm_input_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/rz_dp_text"
                        style="@style/input_style_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/input_rz_dp" />

                    <EditText
                        android:id="@+id/rz_dp_value"
                        style="@style/editText_style"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@android:color/transparent" />
                </LinearLayout>
                <!-- 本单位工作年数 -->

                <LinearLayout
                    android:id="@+id/work_year_text_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/rz_dp_text_ll"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/comm_must_fill_term"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/work_year_text"
                        style="@style/input_style_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="本单位工作年限：" />

                    <EditText
                        android:id="@+id/year_value"
                        style="@style/editText_style"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@android:color/transparent"
                        android:inputType="number" />

                    <TextView
                        android:id="@+id/year_text"
                        style="@style/input_style_other_text"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:gravity="right"
                        android:text="年" />
                </LinearLayout>

                <!-- 总工作年限 -->

                <LinearLayout
                    android:id="@+id/total_year_text_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/work_year_text_ll"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/comm_input_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/total_year_text"
                        style="@style/input_style_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="总工作年限：" />

                    <EditText
                        android:id="@+id/total_year_value"
                        style="@style/editText_style"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@android:color/transparent"
                        android:inputType="number" />

                    <TextView
                        style="@style/input_style_other_text"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:gravity="right"
                        android:text="年" />
                </LinearLayout>

                <!-- 单位地址 -->

                <LinearLayout
                    android:id="@+id/dp_address_text_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/total_year_text_ll"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/comm_must_fill_term"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/dp_address_text"
                        style="@style/input_style_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="@string/dp_address" />

                    <EditText
                        android:id="@+id/province_value"
                        style="@style/editText_style"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@android:color/transparent" />
                </LinearLayout>
                <!-- 单位电话 -->

                <LinearLayout
                    android:id="@+id/dp_tel_text_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/dp_address_text_ll"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/comm_must_fill_term"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/dp_tel_text"
                        style="@style/input_style_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="@string/dp_tel" />

                    <TextView
                        android:id="@+id/area_num_text"
                        style="@style/input_style_other_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="@string/area_num" />

                    <EditText
                        android:id="@+id/area_num_value"
                        style="@style/editText_style"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@android:color/transparent"
                        android:inputType="number" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tel_num_text_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/dp_tel_text_ll"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/comm_input_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tel_num_text"
                        style="@style/input_style_other_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/tel_num" />

                    <EditText
                        android:id="@+id/tel_num_value"
                        style="@style/editText_style"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@android:color/transparent"
                        android:inputType="number" />

                    <TextView
                        android:id="@+id/extension_num_text"
                        style="@style/input_style_other_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/extension_num" />

                    <EditText
                        android:id="@+id/extension_num_value"
                        style="@style/editText_style"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@android:color/transparent"
                        android:inputType="number" />
                </LinearLayout>

                <!-- 红色分割线 -->

                <ImageView
                    android:id="@+id/red_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tel_num_text_ll"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/comm_division_line" />

                <!-- 单位性质 -->

                <LinearLayout
                    android:id="@+id/dp_nature_text_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/red_bg"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/dp_nature_text"
                        style="@style/input_style_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/dp_nature"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/dp_nature_group"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/comm_spinner_selecter"
                        android:paddingLeft="10dp" />
                </LinearLayout>

                <!-- 企业规模 -->

                <LinearLayout
                    android:id="@+id/dp_scale_text_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/dp_nature_text_ll"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/dp_scale_text"
                        style="@style/input_style_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="企业规模"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/dp_scale_group"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/comm_spinner_selecter"
                        android:paddingLeft="10dp" />
                </LinearLayout>

                <!-- 行业性质 -->

                <LinearLayout
                    android:id="@+id/trade_nature_text_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/dp_scale_text_ll"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/trade_nature_text"
                        style="@style/input_style_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/trade_nature"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/dp_trade_nature_group"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/comm_spinner_selecter"
                        android:paddingLeft="10dp" />
                </LinearLayout>
                <!-- 所在职业 -->

                <LinearLayout
                    android:id="@+id/now_profession_text_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/trade_nature_text_ll"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/now_profession_text"
                        style="@style/input_style_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="所在职业"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/now_progression_group"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/comm_spinner_selecter"
                        android:paddingLeft="10dp"
                        android:paddingRight="40dp" />
                </LinearLayout>
                <!-- 红色分割线 -->

                <ImageView
                    android:id="@+id/red_bg1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/now_profession_text_ll"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/comm_division_line" />

                <!-- 现任职位 -->

                <LinearLayout
                    android:id="@+id/now_role_text_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/red_bg1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/now_role_text"
                        style="@style/input_style_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/red_bg1"
                        android:layout_marginLeft="10dp"
                        android:text="现任职位"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/now_role_group"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/comm_spinner_selecter"
                        android:paddingLeft="10dp" />
                </LinearLayout>

                <!-- 个人工资月收入 -->

                <LinearLayout
                    android:id="@+id/money_month_text_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/now_role_text_ll"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/comm_must_fill_term"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/money_month_text"
                        style="@style/input_style_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="个人工资月收入：" />

                    <EditText
                        android:id="@+id/money_month_value"
                        style="@style/editText_style"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@android:color/transparent"
                        android:inputType="number" />

                    <TextView
                        android:id="@+id/yuan_text"
                        style="@style/input_style_other_text"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:gravity="right"
                        android:text="元" />
                </LinearLayout>
                
                <!-- 下一步操作按钮 -->
                <Button
                    android:id="@+id/next_button"
                    style="@style/next_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/money_month_text_ll"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/button_next_selector"
                    android:gravity="center_horizontal|center"
                    android:text="下一步" />
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</LinearLayout>