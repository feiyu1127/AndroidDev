<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/video_background"
  android:orientation="vertical">
  <SurfaceView
    android:id="@+id/surfaceview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone" />
   
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
      android:id="@+id/tv_contents3"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:background="#ececec"
      android:gravity="center_horizontal"
      android:lineSpacingExtra="5dp"
      android:textColor="@color/black"
      android:textSize="16sp"
      android:visibility="invisible" />
    <TextView
      android:id="@+id/tv_contents1"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:background="#ececec"
      android:gravity="center_horizontal"
      android:layout_below="@id/tv_contents3"
      android:lineSpacingExtra="5dp"
      android:textColor="#0172cd"
      android:textSize="16sp"
      android:visibility="invisible" />
    <TextView
      android:id="@+id/time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/tv_contents1"
      android:layout_centerHorizontal="true"
      android:text="剩余时间：5 秒"
      android:textColor="#f9d100"
      android:textSize="18sp"
      android:visibility="gone" />
    <ScrollView
  
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout
      android:id="@+id/layout1"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="45dp"
      android:orientation="vertical">
     
      <TextView
        android:id="@+id/tv_contents2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="13dp"
        android:textColor="#0172cd"
        android:textSize="17sp" />
      <!-- wz -->
      <Button
        android:id="@+id/startMedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="13dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/media_player" />
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <CheckBox
          android:id="@+id/checkb"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_marginLeft="20dp"
          android:button="@drawable/check_state_"
          android:gravity="center_vertical"
          android:text="   我已知悉并同意上述条款"
          android:textColor="#0172cd"
          android:textSize="15sp" />
      </LinearLayout>
      <Button
        android:id="@+id/bt_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="18dp"
        android:background="@drawable/dialog_pos"
        android:text="下一步"
        android:textColor="@color/white" />
           <Button
        android:id="@+id/bt_null"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
       	android:visibility="invisible"
        />
    </LinearLayout>
  </ScrollView>
  </RelativeLayout>
  <RelativeLayout
    android:id="@+id/video_bottom"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="#ececec"
    android:visibility="gone">
    <TextView
      android:id="@+id/quit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginLeft="20dp"
      android:text="取消"
      android:textColor="#0172cd"
      android:textSize="20sp" />
    <TextView
      android:id="@+id/sure"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:layout_marginRight="20dp"
      android:text="保存"
      android:textColor="#0172cd"
      android:textSize="20sp" />
    <Button
      android:id="@+id/start"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_centerVertical="true"
      android:layout_marginBottom="10dp"
      android:layout_marginTop="10dp"
      android:background="@drawable/video_stop" />
  </RelativeLayout>
  <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_above="@id/video_bottom"
    android:layout_marginBottom="-10dp"
    android:orientation="horizontal">
    <Button
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:visibility="invisible" />
    <ImageView
      android:id="@+id/flagImage"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:background="@drawable/point_out"
      android:visibility="gone" />
  </LinearLayout>
  <!-- <ImageView android:id="@+id/flagImage" android:layout_width="wrap_content" 
    android:layout_height="wrap_content" android:layout_above="@+id/video_bottom" 
    android:layout_alignParentRight="true" android:visibility="gone" android:background="@drawable/point_out" 
    /> -->
</RelativeLayout>