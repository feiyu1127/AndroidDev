<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loan_confirm_property_info_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaeaee"
    android:orientation="vertical"
    android:padding="20dp" 
    android:visibility="gone">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人资产-房产："
            android:textColor="#2b2b2b"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/loan_confirm_property_info_tv_person_property_house_property"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="150万"
            android:textColor="#2b2b2b"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人资产-汽车："
            android:textColor="#2b2b2b"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/loan_confirm_property_info_tv_person_property_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="劳斯莱斯"
            android:textColor="#2b2b2b"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人资产-其它："
            android:textColor="#2b2b2b"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/loan_confirm_property_info_tv_person_property_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxx"
            android:textColor="#2b2b2b"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人负债-购房贷款："
            android:textColor="#2b2b2b"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/loan_confirm_property_info_tv_person_liabilities_house"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300万"
            android:textColor="#2b2b2b"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人负债-购车贷款："
            android:textColor="#2b2b2b"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/loan_confirm_property_info_tv_person_liabilities_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="39万"
            android:textColor="#2b2b2b"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人负债-其它贷款："
            android:textColor="#2b2b2b"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/loan_confirm_property_info_tv_person_liabilities_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60万"
            android:textColor="#2b2b2b"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月还款金额（元）-购房贷款："
            android:textColor="#2b2b2b"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/loan_confirm_property_info_tv_month_repayment_money_house"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5000元"
            android:textColor="#2b2b2b"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月还款金额（元）-购车贷款："
            android:textColor="#2b2b2b"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/loan_confirm_property_info_tv_month_repayment_money_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500元"
            android:textColor="#2b2b2b"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月还款金额（元）-其它贷款："
            android:textColor="#2b2b2b"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/loan_confirm_property_info_tv_month_repayment_money_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300元"
            android:textColor="#2b2b2b"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="是否有银行信用卡："
            android:textColor="#2b2b2b"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/loan_confirm_property_info_tv_whether_have_credit_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有"
            android:textColor="#2b2b2b"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单张信用卡最高额度："
            android:textColor="#2b2b2b"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/loan_confirm_property_info_tv_single_credit_card_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200000元"
            android:textColor="#2b2b2b"
            android:textSize="16sp" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发卡银行名称："
            android:textColor="#2b2b2b"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/loan_confirm_property_info_tv_tuck_comb_bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200000元"
            android:textColor="#2b2b2b"
            android:textSize="16sp" />
    </LinearLayout>
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >
        
        <Button 
            android:id="@+id/loan_confirm_property_info_btn_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/label_all_selected"
            android:text="确认"
            android:textSize="16sp"
            android:textColor="#ffffff"/>
        
        <Button 
            android:id="@+id/loan_confirm_property_info_btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_next_selector"
            android:text="编辑"
            android:textSize="16sp"
            android:textColor="#ffffff"/>
    </RelativeLayout>

</LinearLayout>