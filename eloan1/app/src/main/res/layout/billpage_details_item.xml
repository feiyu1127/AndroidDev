            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:paddingBottom="3dip"
            android:paddingTop="3dip"
            android:text="卡号末四位:"
            android:textColor="#595959"
            android:textSize="18sp" />

        <EditText
