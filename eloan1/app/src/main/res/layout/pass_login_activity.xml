<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2ede9"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".MyLoginActivity" >

    <LinearLayout
        android:id="@+id/by_logo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:gravity="center_horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/by_logo" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
          android:textColor="#787878"
        android:text="请您登陆以核实您的身份!"
   
        android:gravity="center_horizontal"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/bg_username"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:background="@drawable/username_bj"
                android:hint="用户名/手机号/身份证号"
                android:lines="1"
                android:paddingLeft="60dip"
                android:singleLine="true"
                android:textSize="18sp" >
            </EditText>

            <EditText
                android:id="@+id/bg_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bg_username"
                android:layout_marginBottom="30dip"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:background="@drawable/password_bg"
                android:hint="登录密码"
                android:inputType="textPassword"
                android:paddingLeft="60dip"
                android:password="true"
                android:singleLine="true"
                android:textSize="18sp" >
            </EditText>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/bg_username"
                android:layout_alignLeft="@+id/bg_username"
                android:layout_marginBottom="8dip"
                android:layout_marginLeft="14dp"
                android:background="@drawable/username_icon" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/bg_password"
                android:layout_alignLeft="@+id/bg_password"
                android:layout_marginBottom="8dip"
                android:layout_marginLeft="14dp"
                android:background="@drawable/password_icon" />

            <Button
                android:id="@+id/bt_login"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bg_password"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:background="@drawable/login_bt"
                android:text="登录"
                android:textColor="#ffffff"
                android:textSize="20sp" />

 
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>