<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topbg" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/back_selector" >
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="申请进度查询"
            android:textColor="@color/headcolor"
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#61cbe4"
        android:gravity="center"
        android:padding="5dip"
        android:text="贷款信息详情"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/app_sche_mess"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/app_schedule_re1"
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:layout_marginTop="20dip"
                        android:background="@drawable/comm_input_bg"
                        android:gravity="center_vertical" >

                        <TextView
                            style="@style/input_style_other"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:text="@string/approve_progress_shenqing_num" />

                        <TextView
                            android:id="@+id/approve_progress_shenqing_num"
                            style="@style/editText_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/app_schedule_re2"
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:layout_marginTop="13dip"
                        android:background="@drawable/comm_input_bg"
                        android:gravity="center_vertical" >

                        <TextView
                            style="@style/input_style_other"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:text="证件号码：" />

                        <TextView
                            android:id="@+id/app_schedule_query_zhengjian_num"
                            style="@style/editText_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/app_schedule_re3"
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:layout_marginTop="13dip"
                        android:background="@drawable/comm_input_bg"
                        android:gravity="center_vertical" >

                        <TextView
                            style="@style/input_style_other"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:text="客户姓名：" />

                        <TextView
                            android:id="@+id/app_schedule_query_name"
                            style="@style/editText_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/app_schedule_re4"
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:layout_below="@id/app_schedule_re3"
                        android:layout_marginTop="13dip"
                        android:background="@drawable/comm_input_bg"
                        android:gravity="center_vertical" >

                        <TextView
                            style="@style/input_style_other"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:text="申请日期：" />

                        <TextView
                            android:id="@+id/app_schedule_query_shenpi_time"
                            style="@style/editText_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:layout_below="@id/app_schedule_re3"
                        android:layout_marginTop="13dip"
                        android:background="@drawable/comm_input_bg"
                        android:gravity="center_vertical" >

                        <TextView
                            style="@style/input_style_other"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:text="核准金额：" />

                        <TextView
                            android:id="@+id/app_schedule_query_shenpi_money"
                            style="@style/editText_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    
                        <LinearLayout
                        	android:id="@+id/app_schedule_re5"
                            android:layout_width="match_parent"
                        	android:layout_height="40dip"
                            android:gravity="center_vertical"
                        	android:layout_marginTop="13dip"
                        	android:background="@drawable/comm_input_bg" >

                            <TextView
                                style="@style/input_style_other"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dip"
                                android:text="申请期限：" />

                            <TextView
                                android:id="@+id/app_schedule_query_shenqing_qixian"
                                style="@style/editText_style"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/app_schedule_re6"
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:layout_marginTop="13dip"
                        android:background="@drawable/comm_input_bg" >

                        <TextView
                            android:id="@+id/tv_confirm_state"
                            style="@style/input_style_other"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="5dip"
                            android:text="申请状态:" />

                        <TextView
                            android:id="@+id/app_schedule_query_shenqing_state"
                            style="@style/editText_style"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_toRightOf="@id/tv_confirm_state" />

                    </RelativeLayout>
                    
                    <RelativeLayout
                        android:id="@+id/app_schedule_re7"
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:layout_marginTop="13dip"
                        android:background="@drawable/comm_input_bg" >

                        <TextView
                            android:id="@+id/tv_confirm_state1"
                            style="@style/input_style_other"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="5dip"
                            android:text="放款状态:" />

                        <TextView
                            android:id="@+id/app_schedule_query_fangkuan_state"
                            style="@style/editText_style"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_toRightOf="@id/tv_confirm_state1" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/app_schedule_re8"
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:layout_marginTop="13dip"
                        android:background="@drawable/comm_input_bg" >

                        <TextView
                            android:id="@+id/tv_confirm_state2"
                            style="@style/input_style_other"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="5dip"
                            android:text="还款状态:" />

                        <TextView
                            android:id="@+id/app_schedule_query_huankuan_state"
                            style="@style/editText_style"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_toRightOf="@id/tv_confirm_state2" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>