                    android:paddingBottom="10dip"
                    android:text="本期取款总金额:"
                    android:textColor="#595959"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/curCashAmt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:background="@null"
                    android:focusable="false"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:paddingLeft="10dip"
                    android:singleLine="true"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:paddingBottom="10dip"
                    android:text="本期手续费总金额:"
                    android:textColor="#595959"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/curFeeAmt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:background="@null"
                    android:focusable="false"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:paddingLeft="10dip"
                    android:singleLine="true"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:paddingBottom="10dip"
                    android:text="逾期金额:"
                    android:textColor="#595959"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/odAmt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:background="@null"
                    android:focusable="false"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:paddingLeft="10dip"
                    android:singleLine="true"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:paddingBottom="10dip"
                    android:text="消费笔数:"
                    android:textColor="#595959"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/cashNum"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:background="@null"
                    android:focusable="false"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:paddingLeft="10dip"
                    android:singleLine="true"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="25dip"
                android:gravity="center_vertical" >

                <Button
                    android:id="@+id/check_bill"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/register_bt"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip"
                    android:text="查询账单详情"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

        <ScrollView
        android:id="@+id/scrollview2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_divider2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:scrollbars="vertical"
        android:background="#fafafa"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="25dip"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dip"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:paddingBottom="10dip"
                    android:text="交易时间"
                    android:textColor="#595959"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/hostTxDt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:background="@null"
                    android:focusable="false"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:paddingLeft="10dip"
                    android:singleLine="true"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:paddingBottom="10dip"
                    android:text="到期还款日"
                    android:textColor="#595959"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/acctDt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:background="@null"
                    android:focusable="false"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:paddingLeft="10dip"
                    android:singleLine="true"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:paddingBottom="10dip"
                    android:text="交易金额"
                    android:textColor="#595959"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/txAmt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:background="@null"
                    android:focusable="false"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:paddingLeft="10dip"
                    android:singleLine="true"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:paddingBottom="10dip"
                    android:text="总利息"
                    android:textColor="#595959"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/totalInt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:background="@null"
                    android:focusable="false"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:paddingLeft="10dip"
                    android:singleLine="true"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:paddingBottom="10dip"
                    android:text="本期利息"
                    android:textColor="#595959"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/curNormInt2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:background="@null"
