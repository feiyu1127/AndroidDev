<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2ede9"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topbg" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/back_selector" />

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Mini循环消费贷账单"
            android:textColor="#595959"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/select_month"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:background="#69cae7" >

        <TextView
            android:id="@+id/nowMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:text="一月"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lastMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:background="@drawable/arrow_left"
            android:gravity="center"
            android:paddingBottom="10dip"
            android:paddingLeft="20dip"
            android:paddingTop="10dip"
            android:text="上月"
            android:textColor="#a2edff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/nextMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/arrow_right"
            android:gravity="center"
            android:paddingBottom="10dip"
            android:paddingRight="20dip"
            android:paddingTop="10dip"
            android:text="下月"
            android:textColor="#a2edff"
            android:textSize="18sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_divider1"
        android:layout_width="fill_parent"
        android:layout_height="10dip"
        android:layout_below="@id/select_month"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="#fafafa" />

    <LinearLayout
        android:id="@+id/ll_navagation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_divider1"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip" >

        <Button
            android:id="@+id/bt_left_aa"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bill_click"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:text="已出账单"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bt_right_aa"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/bt_left_a"
            android:layout_weight="1"
            android:background="@drawable/unbill_nomal"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:text="未出账单"
            android:textColor="#595959"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_divider2"
        android:layout_width="fill_parent"
        android:layout_height="20dip"
        android:layout_below="@id/ll_navagation"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="#fafafa" />
    
    <ScrollView
        android:id="@+id/scrollview1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_divider2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:scrollbars="vertical"
        android:background="#fafafa"
        android:visibility="gone" >

        <LinearLayout
