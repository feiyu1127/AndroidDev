<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/mytitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topbg" >

        <ImageView
            android:id="@+id/mybackhuodonggonggao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/back_selector" />

        <TextView
            android:id="@+id/mytv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="我的消息"
            android:textColor="#595959"
            android:textSize="20sp" />
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/white"
        android:fadingEdge="none"
        android:orientation="vertical" >
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/mycommon"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/title_left_selector"
                android:text="贷款状态消息"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/mymini"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/title_right_normal"
                android:text="其他消息"
                android:textColor="#595959"
                android:textSize="18sp" />
        </LinearLayout>
        
        <com.yucheng.byxf.mini.views.XListView
	        android:id="@+id/sysMsgList"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_marginLeft="15dp"
	        android:layout_marginRight="15dp"
	        android:layout_marginTop="5dp"
	        android:cacheColorHint="#00000000"
	        android:divider="@null"
	        android:dividerHeight="2dp"
	        android:listSelector="@android:color/transparent"
	        android:scrollbars="none" >
	    </com.yucheng.byxf.mini.views.XListView>
	    <com.yucheng.byxf.mini.views.XListView
            android:id="@+id/other_sysMsgList"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:cacheColorHint="#00000000"
            android:divider="@null"
            android:dividerHeight="2dp"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none" >
        </com.yucheng.byxf.mini.views.XListView>

        <ImageView
            android:id="@+id/sysMsg_schedule_null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>