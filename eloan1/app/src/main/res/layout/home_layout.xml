<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="110"
        android:background="@drawable/topbg" >

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/logo_mini" />

        <ImageView
            android:id="@+id/menuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/menu_selector" />

        <TextView
            android:id="@+id/dian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="..."
            android:textColor="#595959"
            android:textSize="18sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/dian"
            android:ellipsize="end"
            android:maxEms="4"
            android:maxLength="4"
            android:text="fasdfas"
            android:textColor="#595959"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/picture_layout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        android:layout_weight="339" >

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <Button
            android:id="@+id/consumeloanButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/consumeloan_selector"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/picture_imageview"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        
        android:background="@drawable/brand1"
        android:layout_weight="339" />

    <LinearLayout
        android:id="@+id/pagedot"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="31"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:baselineAligned="false"
        android:id="@+id/layout1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="274" >

        <RelativeLayout
            android:id="@+id/xunhuan"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/mini_normal" >

            <ImageView
                android:id="@+id/xunhuan_log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/jisu_loan_normal" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/common"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/common_normal" >

            <ImageView
                android:id="@+id/common_log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/common_log_normal" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="238" >

        <RelativeLayout
            android:id="@+id/search"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/search_company_normal" >

            <ImageView
                android:id="@+id/search_log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/mini_log_home" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bill"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/bill_chanpin_normal" >

            <ImageView
                android:id="@+id/bill_log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/xiaojinyin_log" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:baselineAligned="false"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="238" >

        <RelativeLayout
            android:id="@+id/chanpin"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/bill_chanpin_normal" >

            <ImageView
                android:id="@+id/chanpin_log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/myeloan1" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/company"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/search_company_normal" >

            <ImageView
                android:id="@+id/company_log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/chanpin_log_normal2" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>