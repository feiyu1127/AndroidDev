<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2ede9"
    android:orientation="vertical"
    tools:context=".RegisterActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bar"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户注册"
            android:textColor="#595959"
            android:textSize="20sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip" >

                <Button
                    android:id="@+id/bt_left_a"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:background="@drawable/register_left_b"
                    android:text="填写注册信息"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/bt_right_a"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/bt_left_a"
                    android:layout_weight="10"
                    android:background="@drawable/register_right_a"
                    android:text="确认手机号码"
                    android:textColor="#595959"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="25dip"
                android:layout_weight="10"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip"
                    android:background="@drawable/comm_input_bg"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:paddingBottom="10dip"
                        android:paddingTop="10dip"
                        android:text="用  户  名:"
                        android:textColor="#595959"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/login_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dip"
                        android:background="@null"
                        android:maxLines="1"
                        android:paddingLeft="10dip"
                        android:hint="4-20位数字字母组合，区分大小写"
                        android:singleLine="true"
                        android:maxLength="20" 
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
                    android:background="@drawable/comm_input_bg"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:paddingBottom="10dip"
                        android:paddingTop="10dip"
                        android:text="身份证号:"
                        android:textColor="#595959"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_identify"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dip"
                        android:background="@null"
                        android:maxLines="1"
                        android:paddingLeft="10dip"
                        android:singleLine="true"
                        android:maxLength="18" 
                        android:textSize="15sp" 
                        android:hint="请输入您的身份证号"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
                    android:background="@drawable/comm_input_bg"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:paddingBottom="10dip"
                        android:paddingTop="10dip"
                        android:text="手机号码:"
                        android:textColor="#595959"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dip"
                        android:background="@null"
                        android:maxLines="1"
                        android:paddingLeft="10dip"
                        android:singleLine="true"
                        android:maxLength="11" 
                        android:inputType="phone"
                        android:textSize="15sp"
                        android:hint="请输入您的常用手机号"
                         />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
                    android:background="@drawable/comm_input_bg"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:paddingBottom="10dip"
                        android:paddingTop="10dip"
                        android:text="中文姓名:"
                        android:textColor="#595959"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_username"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dip"
                        android:background="@null"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:paddingLeft="10dip"
                        android:singleLine="true"
                        android:textSize="15sp"
                        android:hint="请输入您的真实姓名"
                       />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
                    android:background="@drawable/comm_input_bg"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:paddingBottom="10dip"
                        android:paddingTop="10dip"
                        android:text="登录密码:"
                        android:textColor="#595959"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/tv_Password"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dip"
                        android:background="@null"
                        android:maxLength="20"
                        android:password="true"
                        android:maxLines="1"
                        android:hint="8-20位字母和数字的组合"
                        android:paddingLeft="10dip"
                        android:singleLine="true"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
                    android:background="@drawable/comm_input_bg"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:paddingBottom="10dip"
                        android:paddingTop="10dip"
                        android:text="确认密码:"
                        android:textColor="#595959"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/tv_confirmPassword"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dip"
                        android:background="@null"
                        android:maxLength="20"
                        android:password="true"
                        android:maxLines="1"
                        android:paddingLeft="10dip"
                        android:singleLine="true"
                        android:hint="与登录密码一致"
                        android:textSize="15sp" 
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dip"
                    android:layout_marginTop="25dip"
                    android:gravity="center_vertical" >

                    <Button
                        android:id="@+id/bt_commit"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/register_bt"
                        android:text="提  交"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>