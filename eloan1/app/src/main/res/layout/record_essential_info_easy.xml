<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#dadce0"
    android:orientation="vertical" >

	<RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topbg" >

        <ImageView
            android:id="@+id/iv_menu_common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/back_selector" />

        <TextView
            style="@style/title_style"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="@string/consume_loan_titile" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/record_essential_info_easy_rl_body"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="#fafafa" />
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="#61cbe4"
            android:gravity="center" >
            
            <TextView
            android:id="@+id/head"
            style="@style/head_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="基本信息" />
            
        </LinearLayout>

        <ScrollView
            android:id="@+id/ScrollView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="40dp"
            android:paddingBottom="10dp"
            android:overScrollMode="never" 
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical" >


                <!-- 婚姻状况 -->

                <LinearLayout
                    android:id="@+id/marital_status_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/red_bg"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/input_style_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/marital_status"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/marital_info_radio"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/marital_status_dis_no"
                            style="@style/button_value"
                            android:layout_width="fill_parent"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="@drawable/radio_left"
                            android:button="@null"
                            android:gravity="center"
                            android:text="@string/marital_status_no" />

                        <RadioButton
                            android:id="@+id/marital_status_mar_no"
                            style="@style/button_value"
                            android:layout_width="fill_parent"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="@drawable/radio_middle"
                            android:button="@null"
                            android:gravity="center"
                            android:text="@string/marital_status_yes" />

                        <RadioButton
                            android:id="@+id/marital_status_other_no"
                            style="@style/button_value"
                            android:layout_width="fill_parent"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="@drawable/radio_right"
                            android:button="@null"
                            android:gravity="center"
                            android:text="@string/marital_status_other" />
                    </RadioGroup>
                </LinearLayout>

                <!-- 供养人数 -->

                <LinearLayout
                    android:id="@+id/house_hold"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/marital_status_ll"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/comm_must_fill_term"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/house_hold_text"
                        style="@style/input_style_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="供养人数：" />

                    <EditText
                        android:id="@+id/house_hold_text_value"
                        style="@style/editText_style"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="numberSigned"
                        android:paddingLeft="5dp" />

                    <TextView
                        style="@style/input_style_other_text"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="right"
                        android:paddingRight="10dp"
                        android:text="人" />
                </LinearLayout>

                <!-- 文化程度 -->

                <LinearLayout
                    android:id="@+id/stand_degree_LL"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/house_hold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/stand_degree"
                        style="@style/input_style_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stand_degree"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/record_essential_info_easy_sp_stand_degree"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="10dp" 
                        android:background="@drawable/comm_spinner_selecter"
                        />
                </LinearLayout>

                <!-- 现居住地址 -->


                <!--
                <LinearLayout
                    android:id="@+id/address_now_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/stand_degree_LL"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/comm_must_fill_term"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/address_now_text"
                        style="@style/input_style_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:text="@string/address_now" />

                    <EditText
                        android:id="@+id/province_value"
                        style="@style/editText_style"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:paddingLeft="5dp" />
                </LinearLayout>
                -->
                <!-- 户籍地址  更改为现居住地地址 -->

                <LinearLayout
                    android:id="@+id/permanent_address_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/comm_must_fill_term"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/permanent_address_text"
                        style="@style/input_style_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:text="@string/address_now" />

                    <Button
                        android:id="@+id/permanent_address_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/comm_small_button_selector"
                        android:padding="5dp"
                        android:text="同户籍地址"
                        android:textColor="#77403c" />

                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/comm_input_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/permanent_address_province_value"
                        style="@style/editText_style"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:paddingLeft="5dp" />

                </LinearLayout>
                
                <!-- 住宅电话 -->
				<LinearLayout
                    android:id="@+id/home_phone_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/comm_input_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/home_phone_text"
                        style="@style/input_style_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/home_phone" />

                    <TextView
                        android:id="@+id/area_num_text"
                        style="@style/input_style_other_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="@string/area_num" />
					<!-- 区号 -->
                    <EditText
                        android:id="@+id/area_card_value"
                        style="@style/editText_style"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:maxLength="4"
                        android:background="@android:color/transparent"
                        android:inputType="number" />
                </LinearLayout>
				<!-- 电话号码 -->
                <LinearLayout
                    android:id="@+id/tel_num_text_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/comm_input_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tel_num_text"
                        style="@style/input_style_other_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/tel_num" />

                    <EditText
                        android:id="@+id/phone_no_value"
                        style="@style/editText_style"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:maxLength="8"
                        android:background="@android:color/transparent"
                        android:inputType="number" />
                </LinearLayout>
                <!-- 手机号码 -->

                <LinearLayout
                    android:id="@+id/mobile_no_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/home_phone_ll"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/comm_must_fill_term"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/mobile_no_text"
                        style="@style/input_style_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="@string/mobile_no" />

                    <EditText
                        android:id="@+id/mobile_no_value"
                        style="@style/editText_style"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="numberSigned"
                        android:maxLength="11"
                        android:paddingLeft="5dp" />
                </LinearLayout>

                <!-- 住宅性质 -->

                <LinearLayout
                    android:id="@+id/house_noture_text_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/house_noture_text"
                        style="@style/input_style_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="住宅性质"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/record_essential_info_easy_sp_house_noture"
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/comm_spinner_selecter"
                        android:paddingLeft="10dp" />
                </LinearLayout>
                
                <!-- 在职状况 -->
                
                <LinearLayout
                    android:id="@+id/career_status_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/red_bg"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/input_style_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/career_status"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/career_info_radio"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/career_status_mar_no"
                            style="@style/button_value"
                            android:layout_width="fill_parent"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="@drawable/radio_left"
                            android:button="@null"
                            android:gravity="center"
                            android:text="@string/career_status_yes" />

                        <RadioButton
                            android:id="@+id/career_status_retire_no"
                            style="@style/button_value"
                            android:layout_width="fill_parent"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="@drawable/radio_middle"
                            android:button="@null"
                            android:gravity="center"
                            android:text="@string/career_status_retire" />
                        
                        <RadioButton
                            android:id="@+id/career_status_dis_no"
                            style="@style/button_value"
                            android:layout_width="fill_parent"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="@drawable/radio_right"
                            android:button="@null"
                            android:gravity="center"
                            android:text="@string/career_status_no" />
                        
                    </RadioGroup>
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/next_button"
                        style="@style/next_button_style"
                        android:layout_width="160dp"
                        android:layout_height="40dp"
                        android:background="@drawable/next_step"
                        android:textColor="@color/text_next_selector"
                        android:text="下一步" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

</LinearLayout>