<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topbg" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/back_selector" />

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="我的贷款"
            android:textColor="#595959"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:fadingEdge="none"
        android:orientation="vertical" >

        <!-- 第一个 进度查询 -->

        <RelativeLayout
            android:id="@+id/my_jindu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" >

            <ImageView
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:background="@drawable/my_eloan_jindu" />

            <RelativeLayout
                android:id="@+id/re1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img1" >

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="申请进度查询"
                    android:textColor="#787878"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/t2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/t1"
                    android:layout_marginTop="5dp"
                    android:text="实时查询贷款的办理进度"
                    android:textColor="#a5a5a5" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/im1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/list_sanjiao" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_below="@+id/my_jindu"
            android:background="#dddddd" />
        <!-- 第二个 -->

        <RelativeLayout
            android:id="@+id/my_huankuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" >

            <ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:background="@drawable/my_eloan_huankuan" />

            <RelativeLayout
                android:id="@+id/re2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img2" >

                <TextView
                    android:id="@+id/t22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提前还款"
                    android:textColor="#787878"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/t233"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/t22"
                    android:layout_marginTop="5dp"
                    android:text="查询已放款的提前还款信息"
                    android:textColor="#a5a5a5" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:layout_below="@+id/img2" />

            <ImageView
                android:id="@+id/im2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/list_sanjiao" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_below="@+id/my_huankuan"
            android:background="#dddddd" />
        <!-- 第三个 -->

        <RelativeLayout
            android:id="@+id/my_zhangdan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" >

            <ImageView
                android:id="@+id/img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:background="@drawable/my_eloan_zhangdan" />

            <RelativeLayout
                android:id="@+id/re3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img3" >

                <TextView
                    android:id="@+id/t33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的账单"
                    android:textColor="#787878"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/t333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/t33"
                    android:layout_marginTop="5dp"
                    android:text="查询我的还款计划信息"
                    android:textColor="#a5a5a5" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:layout_below="@+id/img3" />

            <ImageView
                android:id="@+id/im3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/list_sanjiao" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_below="@+id/my_zhangdan"
            android:background="#dddddd"/>
        <!-- 4 -->

        <RelativeLayout
            android:id="@+id/my_minizhangdan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:background="@drawable/my_eloan_zhangdan" />

            <RelativeLayout
                android:id="@+id/re4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img4" >

                <TextView
                    android:id="@+id/t44"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的Mini账单"
                    android:textColor="#787878"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/t444"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/t44"
                    android:layout_marginTop="5dp"
                    android:text="查询我的Mini信息"
                    android:textColor="#a5a5a5" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:layout_below="@+id/img4" />

            <ImageView
                android:id="@+id/im4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/list_sanjiao" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_below="@+id/my_minizhangdan"
            android:background="#dddddd"
            android:visibility="gone" />

        <!-- 我的消息 -->

        <RelativeLayout
            android:id="@+id/my_messange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/img5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:background="@drawable/my_eloan_zhangdan" />

            <RelativeLayout
                android:id="@+id/re5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img5" >

                <TextView
                    android:id="@+id/t55"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的消息"
                    android:textColor="#787878"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/t555"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/t55"
                    android:layout_marginTop="5dp"
                    android:text="查询我的Mini信息"
                    android:textColor="#a5a5a5" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:layout_below="@+id/img5" />

            <ImageView
                android:id="@+id/im5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/list_sanjiao" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_below="@+id/my_minizhangdan"
            android:background="#dddddd" />
    </LinearLayout>

</LinearLayout>